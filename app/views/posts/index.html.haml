#posts
  - @posts.each do |post|
    .post
      %h2.title= link_to post.title, post
      %p.date
        Published at 
        =time_ago_in_words(post.created_at)
        by
        = post.user.email
      - if user_signed_in?
        .buttons.btn-group.btn-group-xs
          = link_to 'Edit', edit_post_path(post), class: "btn btn-default"
          = link_to 'Delete', post_path(post), method: :delete, data: {confirmation: "Are you sure?"}, class: "btn btn-default"


